{
  "name": "url-shrt",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "create-db": "node scripts/createDb.mjs",
    "db:dev": "dotenv -e .env.development -- npx prisma migrate dev --name init",
    "db:docker": "dotenv -e .env.docker -- npx prisma migrate dev --name init",
    "lint": "next lint",
    "start": "next start",
    "test": "jest --env=jsdom",
    "prepare": "husky install"
  },
  "dependencies": {
    "@prisma/client": "^2.27.0",
    "nanoid": "^3.1.23",
    "next": "11.0.1",
    "nextjs-redirect": "^5.0.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.1.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/node": "^16.4.1",
    "@types/react": "^17.0.14",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.0.6",
    "dotenv": "^10.0.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.31.0",
    "eslint-config-next": "^11.0.1",
    "eslint-config-prettier": "^8.3.0",
    "husky": ">=6",
    "jest": "^27.0.6",
    "lint-staged": ">=10",
    "node-mocks-http": "^1.10.1",
    "pg": "^8.6.0",
    "pgtools": "^0.3.2",
    "prettier": "^2.3.2",
    "prisma": "^2.27.0",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest"
    }
  }
}
